{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Janus",
  "version": "0.4.0",
  "identifier": "com.janus.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Janus",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "additionalBrowserArgs": "--disable-save-password-bubble --disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection,AutofillServerCommunication,AutofillAddressProfileSavePrompt,AutofillEnableAccountWalletStorage,PasswordManagerOnboarding"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "createUpdaterArtifacts": false,
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  }
}
